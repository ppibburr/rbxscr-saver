#!/usr/bin/env ruby
if __FILE__ != f=File.expand_path(File.realpath(__FILE__))
  load f
  exit
end

$: << File.join(File.dirname(__FILE__),"..","lib")

require 'rbxscr'

if ARGV[0] == '-window-id'
  ENV['XSCREENSAVER_WINDOW'] = ARGV[1]
  ARGV.delete_at 0
  ARGV.delete_at 0
else
  ScreenSaver.fullscreen = true
end

if ARGV[0] == '--add'
  p ScreenSaver.add(ARGV[1])
  ARGV.delete_at 0
  ARGV.delete_at 0
  e=true
end

if ARGV[0] == '--remove'
  p ScreenSaver.remove(ARGV[1])
  e=true
end

if ARGV[0] == '--interval'
  p ScreenSaver.config[:interval] = ARGV[1].to_i
  ScreenSaver.dump_config
  ARGV.delete_at 0
  ARGV.delete_at 0  
  e=true
end

if ARGV[0] == '--default'
  p ScreenSaver.config[:default] = ARGV[1]
  ScreenSaver.dump_config  
  ARGV.delete_at 0
  ARGV.delete_at 0
  e=true
end

if ARGV[0] == '--dump'
  puts JSON.pretty_generate(ScreenSaver.config)
  exit
end

exit if e

ARGV[0] ||= ScreenSaver.default

if !ARGV.empty?
  saver = ARGV[0] if ARGV[0]
  if saver == '--loop'
    saver = nil
  end
end

p xid: ENV['XSCREENSAVER_WINDOW'],
  pid: Process.pid,
  demo: ScreenSaver.demo = !ENV['XSCREENSAVER_WINDOW']

if saver
  ScreenSaver.load File.expand_path(ARGV[0])
else
  ScreenSaver.cycle
end
